# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trend_autostop

# Security - Generate a strong random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_key_for_encryption_change_this

# Master key for API Key encryption (envelope encryption) - Generate: python -c "import secrets; print(secrets.token_hex(32))"
MASTER_KEY=your_master_key_for_api_key_encryption_32chars

# Algorithm for JWT
ALGORITHM=HS256

# Token expiry
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
PORT=8000
HOST=0.0.0.0
BASE_URL=http://localhost:8000

# Default Exchange (binance, okx, bybit)
DEFAULT_EXCHANGE=bybit

# Email Configuration (for verification and password reset)
# Gmail: use port 465 (SSL) - more stable on cloud servers
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Trend-Autostop

# Email token expiry
EMAIL_VERIFY_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

